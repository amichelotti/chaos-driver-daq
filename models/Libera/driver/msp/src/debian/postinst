#! /bin/sh
# postinst script for libera-msp
#
# see: dh_installdeb(1)
set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

RET_ERROR="-1"
RET_SUCCESS="0"
# Functions
function error() {
    echo $@
    exit $RET_ERROR
}
case "$1" in
    configure)
	
	[ -x /etc/init.d/libera ] && /etc/init.d/libera stop;

	# New modules(s) have been installed
	if ! /sbin/depmod -a; then
	    error "Error calculating module dependencies."
	fi
	# Remove the MSP driver, don't report erros to avoid false alarms
	if ! rmmod msp &> /dev/null ; then
    echo " "
    fi

	if ! stty -F /dev/ttyS2 parenb cs8 -cstopb -parodd -ixon ixoff -onlcr; then
	    error "Error preparing ttyS2 for MSP load."
	fi

    if ! /opt/bin/mspload w < /opt/lib/msp_adc.a43 ; then
	    error "Error loading MSP binary."
	fi

	# Flush all caches
	sync
	sync
	sync
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


